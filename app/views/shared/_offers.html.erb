<div class="grid">
  <% @offers.each do |offer| %>
      <div class="card-trip position-relative">
          <div class="image">
        <%= link_to offer_path(offer) do %>
            <img class="image" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <% end %>
          </div>
        <div class="card-trip-infos">
          <i class="fa-solid fa-heart card-trip-user"></i>
          <div>
            <h2><%= offer.title %></h2>
            <p><%= offer.address %></p>
          </div>
          <div>
            <i class="fa-solid fa-user-group card-i pe-1"></i><%= offer.number_of_guests %>
            <i class="fa-solid fa-brazilian-real-sign card-i ps-3 pe-1"></i><%= offer.price %>
          </div>
        </div>
      </div>
  <% end %>
</div>
