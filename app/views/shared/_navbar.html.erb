<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto border border-dark-subtle rounded-pill px-3 py-1">
        <% if user_signed_in? %>
          <a href="#" class="avatar px-4" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-bars me-2 text-black"></i>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Messages", "#", class: "dropdown-item" %>
              <%= link_to "Trips", "#", class: "dropdown-item" %>
              <%= link_to "Wishlist", "#", class: "dropdown-item" %>
              <hr class="dropdown-divider">
              <%= link_to "Airbnb your home", new_user_offer_path(current_user), class: "dropdown-item" %>
              <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
              <hr class="dropdown-divider">
              <%= link_to "Gift cards", "#", class: "dropdown-item" %>
              <%= link_to "Help center", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-bars me-2 text-black"></i>
            <i class="fa-solid fa-user rounded-circle p-1 bg-secondary text-white"></i>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item fw-semibold" %>
              <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>

              <hr class="dropdown-divider">
              <%= link_to "Gift card", "#", class: "dropdown-item" %>
              <%= link_to "Airbnb your home", "#", class: "dropdown-item" %>
              <%= link_to "Help center", "#", class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
